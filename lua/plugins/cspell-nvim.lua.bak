local config = {
	config_file_preferred_name = "cspell.json",
}

return {
	"davidmh/cspell.nvim",
	config = function()
		local cspell = require("cspell")
		require("null-ls").setup({
			sources = {
				cspell.diagnostics.with({ config = config }),
				cspell.code_actions.with({ config = config }),
			},
		})
	end,
}
